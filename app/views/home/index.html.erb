<h2><%= t('instructions_header') %></h2>
<p>
  <%= raw(t('instructions')) %>
</p>

<div class="container" id="letters_container">
  <% (1..5).each do |number| %>
    <div id="letter_<%= number %>" class="letter_input grey"></div>
  <% end %>
</div>
<div class="container">
  <% (1..5).each do |number| %>
    <div class="colors" id="colors_<%= number %>">
      <div class="grey_button">â¬›</div>
      <div class="yellow_button">ðŸŸ¨</div>
      <div class="green_button">ðŸŸ©</div>
    </div>
  <% end %>
</div>

<input type="text" name="letters_input" maxlength="5"/>

<p>
  <button type="button" id="search"><%= t('search') %></button>
</p>

<div id="wrapper">
  <div id="parameters">
    <p>
      <%= t('language') %>:<br/>
      <select name="language">
        <% 
          languages = {
            PT: {
              language: t('portuguese'),
              flag: 'ðŸ‡§ðŸ‡·'
            },
            EN: {
              language: t('english'),
              flag: 'ðŸ‡ºðŸ‡¸'
            }
          }.sort_by { |_, element| element[:language] }

          languages.each do |language_key, language_element|
        %>
          <option value="<%= language_key %>" <%= I18n.locale.to_s.upcase == language_key.to_s ? "selected" : "" %>>
            <%= language_element[:flag] %> <%= language_element[:language] %>
          </option>
        <% end %>
      </select>
    </p>
    <p>
      <%= t('letters_in_position') %>:<br/>
      <input type="text" name="letters_in_position"/>
    </p>
    <%= t('correct_letters_not_in_position') %>:
    <div id="letters_not_in_position_wrapper"></div>
    <p>
      <%= t('letters_to_exclude') %>:<br/>
      <input type="text" name="letters_to_exclude"/>
    </p>
    <p>
      <button type="button" id="refresh"><%= t('refresh') %></button>
    </p>
    <p>
      <button type="button" id="reset"><%= t('reset') %></button>
    </p>

    <p>
      <div class="common_letters"><%= t('words_with_most_common_letters') %> (<%= t('most_common_letters') %>)</div>
      <div class="repeated_letters"><%= t('words_with_repeated_letters') %></div>
      <div class="uncommon_letters"><%= t('words_with_uncommon_letter') %> (<%= t('uncommon_letters') %>)</div>
    </p>
  </div>

  <div id="result">
    <h2>
      <%= t('suggestions_found') %>: <span id="count"></span>
    </h2>

    <div id="words"></div>
  </div>
</div>